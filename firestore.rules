rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Función centralizada para verificar admin
    function isAdmin() {
      return request.auth != null && (
        request.auth.token.admin == true || 
        request.auth.uid == 'LTNwDZDCH6cZwqhVH7Ol1guYBuJ2'
      );
    }

    // Configuración general: lectura pública para el countdown, escritura protegida
    match /settings/general {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Configuración sensible (API keys, etc): solo admin
    match /settings/{settingId} {
      allow read, write: if isAdmin();
    }

    // Colección: tv_codes (solo admin para ver stock/folios)
    match /tv_codes/{code} {
      allow read, write: if isAdmin();
    }

    // Participantes y Tickets: solo admin (lectura de auditoría)
    match /participants/{participantId} {
      allow read: if isAdmin();
      allow write: if false; // Solo vía backend
    }
    
    match /tickets/{ticketId} {
      allow read: if isAdmin();
      allow write: if false; // Solo vía backend
    }
  }
}